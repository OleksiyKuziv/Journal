@using Roles = journal.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - School Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/helpers/doubleClickEvent.js"></script>
</head>
<body>
    <img src="~/Images/giphy.gif" id="loading-image" style="margin: 0; width: 10px; display: none;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (!User.Identity.IsAuthenticated)
                {
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else{
                @Html.ActionLink("Home","Index","Home",new { area=""},new {@class="navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole(Roles.Roles.Pupil))
                    {
                        <li>@Html.ActionLink("School", "Index", "School")</li>
                        <li>@Html.ActionLink("Class", "Index", "Class")</li>
                        <li>@Html.ActionLink("Study Subject", "Index", "StudySubject")</li>
                    }
                    else if (User.IsInRole(Roles.Roles.Admin))
                    {
                        <li>@Html.ActionLink("School", "Index", "School")</li>
                        <li>@Html.ActionLink("Class", "Index", "Class")</li>
                        <li>@Html.ActionLink("Subject Type", "Index", "SubjectType")</li>
                        <li>@Html.ActionLink("Subject","Index","Subject")</li>
                        <li>@Html.ActionLink("Study Subject", "Index", "StudySubject")</li>
                    }
                    else if (User.IsInRole(Roles.Roles.SuperAdmin))
                    {
                        <li>@Html.ActionLink("School", "Index", "School")</li>
                        <li>@Html.ActionLink("Class", "Index", "Class")</li>
                        <li>@Html.ActionLink("Subject Type", "Index", "SubjectType")</li>
                        <li>@Html.ActionLink("Subject", "Index", "Subject")</li>
                        <li>@Html.ActionLink("Study Subject", "Index", "StudySubject")</li>
                    }
                    else if (User.IsInRole(Roles.Roles.Principle))
                    {
                        <li>@Html.ActionLink("School", "Index", "School")</li>
                        <li>@Html.ActionLink("Class", "Index", "Class")</li>
                        <li>@Html.ActionLink("SubjectType", "Index", "SubjectType")</li>
                        <li>@Html.ActionLink("Subject", "Index", "Subject")</li>
                        <li>@Html.ActionLink("Study Subject", "Index", "StudySubject")</li>
                    }
                    else if (User.IsInRole(Roles.Roles.Parent))
                    {
                        <li>@Html.ActionLink("School", "Index", "School")</li>
                        <li>@Html.ActionLink("Class", "Index", "Class")</li>
                        <li>@Html.ActionLink("Study Subject", "Index", "StudySubject")</li>
                    }
                    else if (User.IsInRole(Roles.Roles.Teacher))
                    {
                        <li>@Html.ActionLink("School", "Index", "School")</li>
                        <li>@Html.ActionLink("Class", "Index", "Class")</li>
                        <li>@Html.ActionLink("SubjectType", "Index", "SubjectType")</li>
                        <li>@Html.ActionLink("Subject","Index","Subject")</li>
                    }
                      else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("ContactUs", "Contact", "Home")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - made by Kuziv Oleksiy</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    @RenderSection("scripts", required: false)
</body>
</html>
