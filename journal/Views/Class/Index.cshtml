@model IEnumerable<journal.ViewModels.ClassViewModels>
@using Roles=journal.Helpers

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
@if (TempData["notice"] != null)
{
<h3 style="color:red">@TempData["notice"]</h3>
}
<div id="data" class="row">
    <div class="col-md-12">
        @if (User.IsInRole(Roles.Roles.Admin)||User.IsInRole(Roles.Roles.Principle)||User.IsInRole(Roles.Roles.SuperAdmin))
        {
        <p>
            <a href="~/Class/Create">Створити новий клас</a>
        </p>
        }
<table class="table table-hover">
    <tr class="danger">
        <th>
           Name
        </th>
        <th>
            Year
        </th>
        <th>
            School
        </th>   
        <th>
            Count of pupils
        </th>
        <th>
        </th>
    </tr>
    @{var counter = -1; }
@foreach (var item in Model)
    {
    counter++;
    <tr class='@(counter%2==0?"success":"")'>
        <td>
           @item.Name
        </td>
        <td>
           @item.Year
        </td>
        <td>
           @item.SelectedSchool
        </td>
        <td>
            @item.Users.Count()
        </td>
        <td>
            @if (User.IsInRole(Roles.Roles.Admin) || User.IsInRole(Roles.Roles.Principle) || User.IsInRole(Roles.Roles.SuperAdmin))
            {
            <a href="~/Class/Edit/@item.ID">Edit</a>
            }
           <a href="~/Class/Details/@item.ID">Details</a> 
            @if (User.IsInRole(Roles.Roles.Admin)||User.IsInRole(Roles.Roles.Principle) || User.IsInRole(Roles.Roles.SuperAdmin))
            {
            <a href="~/Class/Delete/@item.ID">Delete</a>
            }
        </td>
    </tr>
}
</table>
        </div>
    </div>
