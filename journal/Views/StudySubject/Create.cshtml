@model journal.ViewModels.StudySubjectViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Choose subject to study</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <p class="col-md-2 col-sm-3 control-label">Pupil</p>
            <div class="col-md-10">
                <select name="SelectedUser" class="form-control" required>
                    <option></option>
                    @foreach (var c in Model.Users)
                {
                        <option value="@c.Value">@c.Text</option>
                    }
                </select>
                @Html.ValidationMessageFor(m => m.SelectedUser, null, new { @class = "ErrorMessage help-block" })
            </div>
        </div>
        <div class="form-group">
            <p class="col-md-2 col-sm-3 control-label">Study subject</p>
            <div class="col-md-10">
                <select name="SelectedSubject" class="form-control" required>
                    <option></option>
                    @foreach (var c in Model.Subjects)
                {
                        <option value="@c.Value">@c.Text</option>
                    }
                </select>
                @Html.ValidationMessageFor(m => m.SelectedSubject, null, new { @class = "ErrorMessage help-block" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-sm-offset-3 col-md-10">
                <input class="btn btn-default" type="submit" value="Submit">
            </div>
        </div>
    </fieldset>
}

<div>
    <a href="~/Subject/Index">Back to List</a>
</div>

