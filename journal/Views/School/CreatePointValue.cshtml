@model journal.ViewModels.PointValueViewModel
@using Roles=journal.Helpers
@{
    ViewBag.Title = "CreatePointValue";
}

<h2>Create point value</h2>
@using (Html.BeginForm())
{
    <fieldset>
        <div class="form-group">
            <p class="col-md-2 col-sm-3 control-label">Name</p>
            <div class="col-md-10">
                <input class="form-control" type="text" name="Name" placeholder="Full Name" autofocus required oninvalid="this.setCustomValidity('Please enter valid Full Name')" oninput="setCustomValidity('')" />
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "ErrorMessage help-block" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <p class="col-md-2 col-sm-3 control-label">Value</p>
            <div class="col-md-10">
                <input class="form-control" type="text" name="Value" placeholder="Value" required oninvalid="this.setCustomValidity('Please enter valid Value')" oninput="setCustomValidity('')" />
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "ErrorMessage help-block" })
            </div>
        </div>
        <br />
        @if (User.IsInRole(Roles.Roles.SuperAdmin))
        {
            <div class="form-group">
                <p class="col-md-2 col-sm-3 control-label">School</p>
                <div class="col-md-10">
                    <select name="SelectedSchool" class="form-control" required>
                        <option></option>
                        @foreach (var c in Model.Schools)
                    {
                            <option value="@c.Value">@c.Text</option>
                        }
                    </select>
                </div>
            </div>
        }
        <div class="form-group">
            <div class="image col-md-offset-2 col-sm-offset-3 col-md-10">
                <input id="btnSubmit" class="submit btn btn-default" type="submit" value="Submit">
            </div>
        </div>
    </fieldset>
}
<div>
    <a href="~/School/IndexPointValue">Back to List</a>
</div>

