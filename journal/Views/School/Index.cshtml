@model IEnumerable<journal.Models.School>
@using Roles=journal.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="data" class="row">
    <div class="col-md-12">
        @if (User.IsInRole(Roles.Roles.Admin)||User.IsInRole(Roles.Roles.Principle))
        {
        <p>
            <a href="~/School/Create">Створити нову школу</a>
            <br />
            <a href="~/School/CreatePointValue">Створити нову оцінку</a>
            <br />
            <a href="~/School/CreatePointLevel">Створити новий тип оцінок</a>
        </p>
        }
        <table class="table table-hover">
            <tr class="danger">
                <th>
                    Full Name
                </th>
                <th>
                    Short Name
                </th>
                <th>
                    Type School
                </th>
                <th>
                    Degree
                </th>
                <th>
                    Owner Ship
                </th>
                <th>
                    Zip Code
                </th>
                <th>
                    Address1
                </th>
                <th>
                    Address2
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    Email
                </th>               
                <th>
                    Regulatory
                </th>
                <th>
                    Data of created
                </th>
                <th>
                </th>
            </tr>           
            @{var counter = -1;} 
                        @foreach (var item in Model)
                        {
                            counter++;
                    <tr class='@(counter%2==0?"success":"")'>
                    <td>
                        @item.FullName
                    </td>
                    <td>
                        @item.ShortName
                    </td>
                    <td>
                        @item.TypeSchool
                    </td>
                    <td>
                        @item.Degree
                    </td>
                    <td>
                        @item.OwnerShip
                    </td>
                    <td>
                        @item.ZipCode
                    </td>
                    <td>
                        @item.Address1
                    </td>
                    <td>
                        @item.Address2
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Regulatory
                    </td>
                        <td>
                            @item.TimeStamp
                        </td>
                    <td>
                        @if (User.IsInRole(Roles.Roles.Admin)||User.IsInRole(Roles.Roles.Principle))
                        {
                        <a href="~/School/Edit/@item.ID">Edit</a>
                        }
                        <a href="~/School/Details/@item.ID">Details</a>
                        @if (User.IsInRole(Roles.Roles.Admin) || User.IsInRole(Roles.Roles.Principle))
                        {
                        <a href="~/School/Delete/@item.ID">Delete</a>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>