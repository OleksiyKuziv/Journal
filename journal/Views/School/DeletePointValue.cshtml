@model journal.ViewModels.PointValueViewModel
@using Roles = journal.Helpers
@{
    ViewBag.Title = "DeletePointValue";
}

<h2>DeletePointValue</h2>

<div class=" alert alert-danger">
    <h3>Are you sure you want to delete this?</h3>
</div>
<div>
    <h4>Point Value</h4>
    <br />
    <dl class=" dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Value</dt>
        <dd>@Model.Value</dd>
        @if (User.IsInRole(Roles.Roles.SuperAdmin))
        {
            <dt>School</dt>
            <dd>@Model.SelectedSchool</dd>
        }
    </dl>
    @using (Html.BeginForm())
    {
        <div class="image form-actions no-color">
            <input type="submit" value="Delete" class="submit btn btn-default" /> |
            <a href="~/School/IndexPointValue">Back to List</a>
        </div>
    }
</div>