@model journal.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">       
        <p class="col-md-2 control-label"> <b>First Name</b></p>
        <div class="col-md-10">           
            <input class="form-control" type="text" name="FirstName" />
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2 control-label"><b> Last Name</b></p>
        <div class="col-md-10">
            <input class="form-control" type="text" name="LastName"/>
        </div>
    </div>

    <div class="form-group">
        <p class="col-md-2 control-label"><b>Email</b></p>
        <div class="col-md-10">
            <input class="form-control" type="email" name="Email" />
        </div>
    </div>
   
    <div class="form-group">
        <p class="col-md-2 control-label"><b>Age</b></p>
        <div class="col-md-10">
            <input class="form-control" type="text" name="Age" />
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2 control-label"><b>Phone</b></p>
        <div class="col-md-10">
            <input class="form-control" type="tel" name="Phone" />
        </div>
    </div>

    <div class="form-group">
        <p class="col-md-2 control-label"><b>Password</b></p>
        <div class="col-md-10">
            <input class="form-control" type="password" name="Password" />
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2 control-label"><b>ConfirmPassword</b></p>
        <div class="col-md-10">
            <input class="form-control" type="password" name="ConfirmPassword" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
